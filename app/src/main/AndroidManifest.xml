<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.F_Food"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">
        <!-- Activities từ nhánh binh -->
        <activity
            android:name=".Screen.features_customer.admin_management.Payment_Transactions_Management"
            android:exported="false" />
        <activity
            android:name=".Screen.features_customer.admin_management.Shipper_Management"
            android:exported="false" />
        <activity
            android:name=".Screen.features_customer.admin_management.Customer_Management"
            android:exported="false" />
        <activity
            android:name=".Screen.features_customer.admin_management.Policy_Management"
            android:exported="false" />
        <activity
            android:name=".Screen.features_customer.admin_management.Restaurant_Management"
            android:exported="false" />
        <activity
            android:name=".Screen.features_customer.admin_management.AdminScreen"
            android:exported="false" />
        <activity
            android:name=".Screen.features_customer.authentication_authorization.Register"
            android:exported="false" />

        <!-- Activities từ nhánh main -->
        <activity
            android:name=".Screen.features_customer.ProductListRestaurant"
            android:exported="true" />
        <activity
            android:name=".Screen.features_customer.FoodDetailActivity"
            android:exported="true" />
        <activity
            android:name=".Screen.authentication_authorization.RestaurantLogIn"
            android:exported="true" />
        <activity
            android:name=".Screen.authentication_authorization.RestaurantSignUp"
            android:exported="false" />
        <activity
            android:name=".Screen.features_customer.ManageAddress"
            android:exported="false" />
        <activity
            android:name=".Screen.features_customer.ReviewAndRating"
            android:exported="false" />
        <activity
            android:name=".Screen.features_customer.OrderTracking"
            android:exported="true" />
        <activity
            android:name=".Screen.features_customer.OrderHistory"
            android:exported="false" />

        <!-- Hoạt động có trong cả hai nhánh -->
        <activity
            android:name=".Screen.features_customer.ViewRestaurantList"
            android:exported="true" />
        <activity
            android:name=".Screen.authentication_authorization.LoginActivity"
            android:exported="true" />

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
