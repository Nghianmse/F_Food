<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp"
    android:id="@+id/activity_checkout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Out"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1D1D1D"
            android:layout_gravity="center"
            android:paddingBottom="16dp"/>

        <!-- ORDER SUMMARY -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORDER SUMMARY"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFC107"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/isushi"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kemeja Wanita Rayon Premium"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L - Broken White"
                    android:textSize="12sp"
                    android:textColor="#777"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp100.000 x 1"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- DELIVERY ADDRESS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELIVERY ADDRESS"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFC107"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elin Septika Ningrum (+62 812 3456 7890)"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jl. Taman Kb. Sirih IV No.3, RW.8, Kp. Bali, Kecamatan Tanah Abang"
                android:textSize="12sp"
                android:textColor="#777"/>
        </LinearLayout>

        <!-- PAYMENT DETAILS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAYMENT DETAILS"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFC107"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal: Rp150.000"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping Fee: Rp10.000"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Fee: Rp10.000"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voucher Code: -Rp20.000"
                android:textSize="14sp"
                android:textColor="#FF3D00"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: Rp150.000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1D1D1D"
                android:paddingTop="8dp"/>
        </LinearLayout>

        <!-- Create Order Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreateOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Order"
            android:backgroundTint="#1976D2"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</ScrollView>
