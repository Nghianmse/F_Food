<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/adminscreen_activity"
    tools:context=".Screen.admin_management.AdminScreen">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tvDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:padding="16dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/layout_OrderManagement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="10dp"
                android:background="@drawable/edittext_border">

                <ImageView

                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/baseline_child_friendly_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_ShipperManagement"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/baseline_barcode_reader_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shipper" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_CustomerManagement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="6"
                android:background="@drawable/edittext_border"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_PolicyManagement"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="10dp"
                android:background="@drawable/edittext_border">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/baseline_auto_stories_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Policy" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_RestaurantManagement"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="10dp"
                android:background="@drawable/edittext_border">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/baseline_assured_workload_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurant" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_ReportManagement"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report" />
            </LinearLayout>
        </GridLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>