<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.features_customer.CustomerProfile"
    android:id="@+id/customerProfile"
    >

    <!-- Home Icon -->
    <ImageView
        android:id="@+id/homeIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/home_icon"
        android:contentDescription="Home Icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/avatar_default"
        android:contentDescription="Profile Image"
        app:layout_constraintTop_toBottomOf="@id/homeIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- User Information -->
    <LinearLayout
        android:layout_width="396dp"
        android:layout_height="531dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileImage">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Họ và tên :"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_purple_bg"
            android:padding="12dp"
            android:text="Nguyễn Văn A"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sdt:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_purple_bg"
            android:padding="12dp"
            android:text="0395-xxx-xxx"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Email :"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="53dp"

            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_purple_bg"
            android:padding="12dp"
            android:text="abcxyz@gmail.com"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật khẩu :"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/rounded_purple_bg"
            android:padding="12dp"
            android:text="••••••••"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="Đổi mật khẩu ?"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:textStyle="italic" />
        <Button
            android:id="@+id/btnManageAddress"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:background="@drawable/rounded_purple_bg"
            android:text="Quản lý địa chỉ"
            android:textColor="@color/white"
            android:layout_constraintTop_toBottomOf="@id/btnEdit"
            android:layout_constraintStart_toStartOf="parent"
            android:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:background="@drawable/rounded_purple_bg"
            android:padding="12dp"
            android:text="Chỉnh sửa"
            android:textColor="@color/white"
            android:layout_marginTop="6dp"/>
    </LinearLayout>


    <!-- Edit Button -->

</androidx.constraintlayout.widget.ConstraintLayout>
